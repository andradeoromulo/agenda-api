        },
        "cpf": {
          "type": "string"
        },
        "dataNascimento": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "EnderecoRequest": {
      "type": "object",
      "properties": {
        "logradouro": {
          "type": "string"
        },
        "numero": {
          "type": "string"
        },
        "complemento": {
          "type": "string"
        },
        "bairro": {
          "type": "string"
        },
        "cidade": {
          "type": "string"
        },
        "estado": {
          "type": "string"
        },
        "cep": {
          "type": "string"
        }
      }
    },
    "EnderecoResponse": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "logradouro": {
          "type": "string"
        },
        "numero": {
          "type": "string"
        },
