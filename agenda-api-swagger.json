          "type": "string"
        },
        "estado": {
          "type": "string"
        },
        "cep": {
          "type": "string"
        }
      }
    },
    "UsuarioComEnderecoResponse": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "nome": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "cpf": {
          "type": "string"
        },
        "dataNascimento": {
          "type": "string",
          "format": "date"
        },
        "enderecos": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EnderecoResponse"
          }
        }
      }
    }
  }
}